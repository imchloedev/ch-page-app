{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "typeRoots": ["./@type"],
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@hooks/*": ["hooks/*"],
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@utils/*": ["utils/*"],
      "@types/*": ["types/*"],
      "@constants/*": ["constants/*"]
    }
  },
  "include": [
    "src/types/custom.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/styles/index.d.ts"
  ],
  "exclude": ["node_modules"]
}
